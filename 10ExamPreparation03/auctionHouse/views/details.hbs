<!-- Details Page -->
<section id="catalog-section">

    <h1 class="item">
        {{auction.title}}

        {{#if isAuthor}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/edit/{{auction._id}}">Edit</a>
            <a class="action pad-small f-left" href="/delete/{{auction._id}}">Delete</a>
        </div>
        {{/if}}
    </h1>

    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{auction.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{category}}</strong></p>
                <p>{{auction.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{auction.price}}</strong>
                    </div>



                    {{#if isAuthor}}
                    <div>
                        {{#if currentBidder}}

                        <!-- If there is a bidder -->
                        Bid by <strong>{{currentBidder}}</strong>


                        <a class="action pad-med cta" href="/close/{{auction._id}}">Close Auction</a>


                        {{else}}
                        No bids
                        {{/if}}

                    </div>
                    {{else}}
                    {{#if isAuthenticated}}
                    {{#if isHighestBidder}}
                    <!-- If current user is the bidder -->

                    <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div>

                    {{else}}
                    <!-- If current user can place a bid -->
                    <form class="vertical" method="post" action="/bid/{{auction._id}}">
                        <label><span>Bid amount</span><input type="number" name="bid"></label>
                        <input class="action" type="submit" value="Place bid">
                    </form>
                    {{/if}}


                    {{/if}}
                    {{/if}}
                </div>

            </div>
        </div>

        <footer>Listed by {{auction.author.firstName}} {{auction.author.lastName}}</footer>
    </div>

</section>